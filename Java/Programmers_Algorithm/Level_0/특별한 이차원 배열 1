class Solution {
    public int[][] solution(int n) {
        int[][] arr = new int[n][n];
        
        for (int i=0; i<arr.length; i++) {
            for (int j=0; j<arr[i].length; j++) {
                if (i==j) {
                    arr[i][j] = 1;
                }
            }
        }
        
        return arr;
    }
}
